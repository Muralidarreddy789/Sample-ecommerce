extends ../layouts/main-layout.pug
block style
    link(rel="stylesheet", href="/css/product.css")
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="css/main.css")
block content
    //- form to add product and to edit product
    main
        if errorMessage.length>0 
            div(class="user-message user-message--error") #{errorMessage}
        form.product-form(action="/reset-password",method="POST")
            .form-control
                label(for="email") Email-id 
                input(type="email",name="email",id="email")
            input(type="hidden" name="_csrf" value=csrfToken)
            button(type="submit") Reset Psassword

